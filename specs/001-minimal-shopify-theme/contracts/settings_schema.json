[
  {
    "name": "theme_info",
    "theme_name": "Minimal Shopify Theme",
    "theme_version": "1.0.0",
    "theme_author": "Your Name",
    "theme_documentation_url": "https://github.com/username/minimal-shopify-theme",
    "theme_support_url": "https://github.com/username/minimal-shopify-theme/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Color Scheme"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary Color",
        "default": "#121212",
        "info": "Used for buttons, links, and accents"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary Color",
        "default": "#4A5568",
        "info": "Used for secondary elements"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#1A202C"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border Color",
        "default": "#E2E8F0"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading Font",
        "default": "helvetica_n7",
        "info": "Used for headings and titles"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body Font",
        "default": "helvetica_n4",
        "info": "Used for body text"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Base Font Size",
        "default": 16
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Page Layout"
      },
      {
        "type": "range",
        "id": "layout_max_width",
        "min": 1000,
        "max": 1600,
        "step": 50,
        "unit": "px",
        "label": "Max Content Width",
        "default": 1200,
        "info": "Maximum width of page content"
      },
      {
        "type": "range",
        "id": "layout_spacing",
        "min": 20,
        "max": 80,
        "step": 5,
        "unit": "px",
        "label": "Section Spacing",
        "default": 40,
        "info": "Vertical spacing between sections"
      },
      {
        "type": "select",
        "id": "layout_alignment",
        "label": "Content Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ],
        "default": "left"
      }
    ]
  },
  {
    "name": "Product Grid",
    "settings": [
      {
        "type": "header",
        "content": "Product Display"
      },
      {
        "type": "range",
        "id": "products_per_row_desktop",
        "min": 2,
        "max": 5,
        "step": 1,
        "label": "Products per row (desktop)",
        "default": 4
      },
      {
        "type": "range",
        "id": "products_per_row_mobile",
        "min": 1,
        "max": 2,
        "step": 1,
        "label": "Products per row (mobile)",
        "default": 2
      },
      {
        "type": "checkbox",
        "id": "product_show_vendor",
        "label": "Show product vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_show_compare_price",
        "label": "Show compare at price",
        "default": true
      },
      {
        "type": "select",
        "id": "product_image_ratio",
        "label": "Product image aspect ratio",
        "options": [
          {
            "value": "natural",
            "label": "Natural"
          },
          {
            "value": "square",
            "label": "Square (1:1)"
          },
          {
            "value": "portrait",
            "label": "Portrait (2:3)"
          },
          {
            "value": "landscape",
            "label": "Landscape (3:2)"
          }
        ],
        "default": "natural"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "header",
        "content": "Cart Settings"
      },
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          }
        ],
        "default": "drawer",
        "info": "Page redirects to /cart, Drawer opens a slide-out panel"
      },
      {
        "type": "checkbox",
        "id": "cart_show_notes",
        "label": "Enable cart notes",
        "default": false
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Media Accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_url",
        "label": "Facebook URL"
      },
      {
        "type": "text",
        "id": "social_instagram_url",
        "label": "Instagram URL"
      },
      {
        "type": "text",
        "id": "social_twitter_url",
        "label": "Twitter URL"
      },
      {
        "type": "text",
        "id": "social_youtube_url",
        "label": "YouTube URL"
      },
      {
        "type": "text",
        "id": "social_tiktok_url",
        "label": "TikTok URL"
      }
    ]
  }
]


{% comment %}
  Cart Drawer / Mini Cart Component
  Sliding drawer that shows cart contents
  Updated with modern DTC visual design
  
  Usage:
    {% render 'cart-drawer' %}
  
  Include this snippet in theme.liquid
{% endcomment %}

<cart-drawer-component 
  class="cart-drawer fixed inset-y-0 right-0 z-50 w-full sm:w-96 bg-background shadow-2xl transform translate-x-full transition-transform duration-300"
  aria-hidden="true"
  aria-label="{{ 'general.cart.title' | t }}"
>
  {%- comment -%} Backdrop {%- endcomment -%}
  <div 
    class="cart-drawer-backdrop fixed inset-0 bg-black/50 opacity-0 transition-opacity duration-300 pointer-events-none backdrop-blur-sm"
    data-drawer-backdrop
    aria-hidden="true"
  ></div>

  {%- comment -%} Drawer Content {%- endcomment -%}
  <div class="cart-drawer-container h-full flex flex-col bg-background relative">
    {%- comment -%} Header {%- endcomment -%}
    <div class="cart-drawer-header flex items-center justify-between p-5 border-b border-border bg-background">
      <h2 class="text-xl font-bold text-foreground">
        {{ 'general.cart.title' | t }}
        <span class="inline-flex items-center justify-center min-w-[24px] h-6 px-2 ml-2 text-xs font-semibold text-primary bg-primary/10 rounded-full">
          <span data-drawer-count>0</span>
        </span>
      </h2>
      
      <button
        type="button"
        class="w-9 h-9 flex items-center justify-center text-foreground-secondary hover:text-foreground hover:bg-border/20 rounded-lg transition-all"
        data-drawer-close
        aria-label="{{ 'accessibility.close' | t }}"
      >
        {% render 'icon', name: 'close', class: 'w-5 h-5' %}
      </button>
    </div>

    {%- comment -%} Empty State {%- endcomment -%}
    <div 
      class="cart-drawer-empty flex-grow flex flex-col items-center justify-center p-8 text-center hidden"
      data-drawer-empty
    >
      <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-border/20 flex items-center justify-center">
        {% render 'icon', name: 'bag', class: 'w-10 h-10 text-foreground-secondary/60' %}
      </div>
      <p class="text-lg font-semibold text-foreground mb-4">{{ 'general.cart.empty' | t }}</p>
      <button
        type="button"
        class="btn btn-primary px-6 py-3 text-sm font-semibold shadow"
        data-drawer-close
      >
        {{ 'general.continue_shopping' | t }}
      </button>
    </div>

    {%- comment -%} Cart Items {%- endcomment -%}
    <div class="cart-drawer-content flex-grow overflow-y-auto hidden bg-border/10" data-drawer-content>
      <div class="p-4 space-y-3" data-drawer-items>
        {%- comment -%} Items will be rendered here by JavaScript {%- endcomment -%}
      </div>
    </div>

    {%- comment -%} Footer {%- endcomment -%}
    <div class="cart-drawer-footer border-t border-border p-5 bg-background" data-drawer-content-footer>
      {%- comment -%} Subtotal {%- endcomment -%}
      <div class="flex justify-between items-baseline mb-2">
        <span class="text-base font-semibold text-foreground-secondary">{{ 'general.cart.subtotal' | t }}</span>
        <span class="text-2xl font-bold text-foreground" data-drawer-subtotal>$0.00</span>
      </div>

      {%- comment -%} Shipping Note {%- endcomment -%}
      <p class="text-xs text-foreground-secondary mb-5 text-center">
        {{ 'general.cart.taxes_and_shipping_at_checkout' | t }}
      </p>

      {%- comment -%} Actions {%- endcomment -%}
      <div class="space-y-2.5">
        <a 
          href="/checkout" 
          class="btn btn-primary w-full text-base font-semibold shadow"
        >
          {{ 'general.cart.checkout' | t }}
        </a>
        
        <a 
          href="/cart" 
          class="w-full text-center block px-6 py-2.5 bg-border/20 text-foreground text-sm font-medium rounded-lg border border-border hover:bg-border/40 transition-all"
        >
          {{ 'general.cart.view_cart' | t }}
        </a>
      </div>
    </div>
  </div>
</cart-drawer-component>

<style>
  /* Cart Drawer Styles */
  .cart-drawer.active {
    transform: translateX(0);
  }

  .cart-drawer.active .cart-drawer-backdrop {
    opacity: 1;
    pointer-events: auto;
  }

  /* Smooth transitions */
  .cart-drawer-item {
    transition: opacity 0.2s ease;
  }

  /* Hide scrollbar but keep functionality */
  .cart-drawer-content::-webkit-scrollbar {
    width: 6px;
  }

  .cart-drawer-content::-webkit-scrollbar-track {
    background: transparent;
  }

  .cart-drawer-content::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 3px;
  }

  .cart-drawer-content::-webkit-scrollbar-thumb:hover {
    background: var(--color-muted);
  }
</style>

<script>
  // Helper to open cart drawer from anywhere
  window.openCartDrawer = function() {
    document.dispatchEvent(new CustomEvent('cart:open-drawer'));
  };

  // Open drawer on cart icon click
  document.addEventListener('click', (e) => {
    const cartTrigger = e.target.closest('[data-cart-trigger]');
    if (cartTrigger) {
      e.preventDefault();
      window.openCartDrawer();
    }
  });
</script>

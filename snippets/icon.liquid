    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="{{ icon_class }}" aria-hidden="true">
      <path d="M5 13l4 4L19 7"></path>
    </svg>

  {% when 'bag', 'shopping-bag' %}

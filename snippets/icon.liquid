      <path fill-rule="evenodd" d="M22.54 6.42c-.21-1.12-1.11-2.02-2.22-2.24C18.24 3.75 12 3.75 12 3.75s-6.24 0-8.32.43c-1.11.22-2.01 1.12-2.22 2.24C1 8.68 1 12 1 12s0 3.32.46 5.58c.21 1.12 1.11 2.01 2.22 2.23 2.08.44 8.32.44 8.32.44s6.24 0 8.32-.44c1.11-.22 2.01-1.11 2.22-2.23.46-2.26.46-5.58.46-5.58s0-3.32-.46-5.58Zm-12.54 9.08V8.5L16 12l-5.5 3.5Z" clip-rule="evenodd"/>
    </svg>

  {% when 'tiktok' %}
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="{{ icon_class }}" aria-hidden="true">
      <path d="M21 7.5a5.49 5.49 0 0 1-3.27-1.08 6.65 6.65 0 0 1-1.38-1.47v7.33a5.72 5.72 0 1 1-5.72-5.72c.22 0 .44.02.65.05v2.9a3.05 3.05 0 1 0 2.16 2.93V2h2.56a5.01 5.01 0 0 0 1.59 3.33A5 5 0 0 0 21 6.9V7.5Z"/>

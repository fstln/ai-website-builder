  {% else %}
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="{{ icon_class }}" aria-hidden="true">
      <circle cx="12" cy="12" r="10"></circle>

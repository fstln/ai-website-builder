{% comment %}
  Product Card Snippet
  
  Usage:
    {% render 'product-card', product: product %}
{% endcomment %}

<div class="product-card group">
  <a href="{{ product.url }}" class="block">
    <div class="product-card-image relative overflow-hidden rounded-lg bg-border mb-4">
      {% if product.featured_image %}
        {% render 'image', 
          image: product.featured_image, 
          alt: product.featured_image.alt | default: product.title,
          class: 'w-full h-auto group-hover:scale-105 transition-transform duration-300'
        %}
      {% else %}
        <div class="aspect-square flex items-center justify-center text-foreground-secondary">
          {% render 'icon', name: 'placeholder' %}
        </div>
      {% endif %}
      
      {% unless product.available %}
        {% render 'product-badge', text: 'products.product.sold_out' | t, type: 'custom', position: 'top-right' %}
      {% else %}
        {% render 'product-badge', product: product, type: 'sale', position: 'top-right' %}
      {% endunless %}
    </div>
    
    <div class="product-card-info">
      <h3 class="font-medium text-sm text-foreground mb-2 line-clamp-2 group-hover:underline">
        {{ product.title }}
      </h3>
      
      {% render 'price', product: product %}
    </div>
  </a>
</div>

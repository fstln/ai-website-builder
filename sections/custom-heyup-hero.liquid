{%- liquid
  assign section_id = 'heyup-hero-' | append: section.id
-%}

<section
  id="{{ section_id }}"
  class="relative w-full flex items-center justify-center overflow-hidden bg-white pt-20 pb-16 lg:pt-0 lg:pb-0 color-scheme color-{{ section.settings.color_scheme }}"
  style="min-height: 85vh;"
>
  <div class="absolute top-[-10%] right-[-5%] w-[300px] h-[300px] md:w-[600px] md:h-[600px] bg-brand-accent/20 rounded-full blur-[80px] pointer-events-none z-0"></div>
  <div class="absolute bottom-[10%] left-[-10%] w-[200px] h-[200px] md:w-[400px] md:h-[400px] bg-brand-accent/10 rounded-full blur-[60px] pointer-events-none z-0"></div>

  <div class="container mx-auto px-6 md:px-12 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
      
      <div class="lg:col-span-6 flex flex-col items-start text-left space-y-8">
        {%- if section.settings.eyebrow_text != blank -%}
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-gray border border-gray-200">
            <span class="w-2 h-2 rounded-full bg-brand-hover animate-pulse"></span>
            <span class="text-sm font-medium text-gray-600 font-sans tracking-wide">{{ section.settings.eyebrow_text }}</span>
          </div>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h1 class="font-display font-bold text-5xl md:text-7xl lg:text-8xl leading-[1.1] text-brand-black tracking-tight">
            {{ section.settings.heading | newline_to_br }}
          </h1>
        {%- endif -%}

        {%- if section.settings.subheading != blank -%}
          <div class="font-sans text-lg md:text-xl text-gray-500 max-w-lg leading-relaxed">
            {{ section.settings.subheading }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
          <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
            <a 
              href="{{ section.settings.button_link }}" 
              class="group relative inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-brand-black rounded-full overflow-hidden transition-all duration-300 hover:bg-brand-hover hover:shadow-lg hover:shadow-brand-hover/30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-hover"
            >
              <span class="relative z-10 flex items-center gap-2">
                {{ section.settings.button_text }}
                <i class="ri-arrow-right-line transition-transform duration-300 group-hover:translate-x-1"></i>
              </span>
            </a>
          </div>
        {%- endif -%}
      </div>

      <div class="lg:col-span-6 relative flex justify-center lg:justify-end">
        <div class="relative w-full max-w-md lg:max-w-lg aspect-square">
          <div class="absolute inset-0 bg-gray-100 rounded-full scale-90 transform translate-y-4 z-0"></div>
          
          {%- if section.settings.image != blank -%}
            <img 
              src="{{ section.settings.image | image_url: width: 800, height: 800 }}" 
              alt="{{ section.settings.image.alt | default: 'Hero image' | escape }}" 
              class="relative z-10 w-full h-full object-contain drop-shadow-2xl"
              width="800"
              height="800"
              loading="eager"
            >
          {%- else -%}
            <img 
              src="https://placehold.co/800x800/F5F5F7/0F0F0F?text=Hero+Image" 
              alt="Placeholder hero image" 
              class="relative z-10 w-full h-full object-contain drop-shadow-2xl"
              width="800"
              height="800"
              loading="eager"
            >
          {%- endif -%}
          
          {%- if section.settings.badge_text_primary != blank -%}
            <div class="absolute bottom-10 left-0 md:-left-8 bg-white/80 backdrop-blur-md border border-white/50 p-4 rounded-2xl shadow-xl z-20">
              <div class="flex items-center gap-3">
                <div class="bg-green-100 p-2 rounded-full text-green-600">
                  <i class="ri-shield-check-line text-xl"></i>
                </div>
                <div>
                  <p class="text-xs text-gray-500 font-sans uppercase tracking-wider">{{ section.settings.badge_text_secondary }}</p>
                  <p class="text-sm font-bold font-display text-brand-black">{{ section.settings.badge_text_primary }}</p>
                </div>
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "C: Heyup Hero",
  "class": "custom-heyup-hero-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow Text",
      "default": "New Arrivals In Stock"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Heyup <br/>Store."
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>A trusted, curated tech outlet for early adopters. Discover the future of audio with the Oladance Series.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Oladance Series"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Visuals"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "badge_text_primary",
      "label": "Floating Badge - Primary",
      "default": "Official Retailer"
    },
    {
      "type": "text",
      "id": "badge_text_secondary",
      "label": "Floating Badge - Secondary",
      "default": "Authorized"
    }
  ],
  "presets": [
    {
      "name": "C: Heyup Hero"
    }
  ]
}
{% endschema %}

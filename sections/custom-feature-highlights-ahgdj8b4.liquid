{%- liquid
  assign section_id = 'feature-highlights-' | append: section.id
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ section.settings.color_scheme }} overflow-hidden"
>
  <div class="container-custom py-12 md:py-24">
    <div class="max-w-3xl mx-auto text-center">
      {%- if section.settings.heading != blank -%}
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-foreground">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <p class="mt-4 text-lg text-foreground-muted">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}
    </div>

    {%- if section.blocks.size > 0 -%}
      <div class="mt-16 grid gap-16 md:grid-cols-2 md:gap-x-8 md:gap-y-20">
        {%- for block in section.blocks -%}
          {%- liquid
            assign is_even = forloop.index | modulo: 2
          -%}
          <div
            class="flex flex-col md:flex-row items-start gap-6"
            {{ block.shopify_attributes }}
          >
            <div
              class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-lg bg-primary text-primary-foreground"
            >
              {%- if block.settings.icon != blank -%}
                {%- render 'icon', name: block.settings.icon, class: 'w-6 h-6' -%}
              {%- else -%}
                {%- render 'icon', name: 'check', class: 'w-6 h-6' -%}
              {%- endif -%}
            </div>
            <div class="flex-grow">
              {%- if block.settings.title != blank -%}
                <h3 class="text-xl font-semibold text-foreground">
                  {{ block.settings.title }}
                </h3>
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                <p class="mt-2 text-base text-foreground-muted">
                  {{ block.settings.description }}
                </p>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Feature Highlights",
  "tag": "section",
  "class": "custom-feature-highlights-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Experience the Difference"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover the key features that make our product unique."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon Name",
          "info": "Use icon names from the snippet 'icon.liquid'. E.g., 'star', 'check', 'headphones'."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Explain the benefit of this feature in a clear and concise way.</p>"
        }
      ],
      "limit": 4
    }
  ],
  "presets": [
    {
      "name": "Feature Highlights",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}

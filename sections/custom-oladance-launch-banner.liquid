{% comment %}
  Oladance Launch Banner Section
  - A two-column section highlighting a product with an image and key selling points (KSPs).
{% endcomment %}

{%- liquid
  assign section_dom_id = 'section-' | append: section.id
  assign color_scheme = section.settings.color_scheme | default: 'scheme-2'
-%}

<section
  id="{{ section_dom_id }}"
  class="color-scheme color-{{ color_scheme }} py-20"
>
  <div class="container mx-auto px-6 md:px-12 lg:px-20">
    <div class="flex flex-col items-center gap-12 lg:flex-row lg:gap-24">
      <div class="relative order-2 w-full lg:w-1/2 lg:order-1">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 1200 }}"
            alt="{{ section.settings.image.alt | escape }}"
            width="600"
            height="450"
            class="relative z-10 aspect-[4/3] h-auto w-full rounded-[24px] object-cover shadow-lg"
            loading="lazy"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'relative z-10 aspect-[4/3] h-auto w-full rounded-[24px] object-cover shadow-lg bg-surface' }}
        {%- endif -%}
      </div>
      <div class="order-1 w-full lg:w-1/2 lg:order-2">
        {%- if section.settings.heading != blank -%}
          <h2 class="text-3xl font-bold text-foreground md:text-4xl mb-4">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        {%- if section.settings.subheading != blank -%}
          <p class="text-lg leading-relaxed text-foreground/70 mb-8">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}

        {%- if section.blocks.size > 0 -%}
          <ul class="space-y-6">
            {%- for block in section.blocks -%}
              <li class="flex items-start gap-4" {{ block.shopify_attributes }}>
                <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full border border-gray-100 bg-white shadow-sm">
                  <i class="{{ block.settings.icon_class | default: 'ri-feather-line' }} text-xl text-[#5E89FF]"></i>
                </div>
                <div>
                  {%- if block.settings.ksp_text != blank -%}
                    <h3 class="text-lg font-bold text-foreground mb-1">
                      {{ block.settings.ksp_text }}
                    </h3>
                  {%- endif -%}
                </div>
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "C: Launch Banner",
  "tag": "section",
  "max_blocks": 3,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-2"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Unlock Auditory Freedom"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Oladance Open-Ear Headphones Limited-Time Offer.</p>"
    }
  ],
  "blocks": [
    {
      "type": "ksp",
      "name": "Key Selling Point",
      "settings": [
        {
          "type": "text",
          "id": "icon_class",
          "label": "Remix Icon Class",
          "info": "e.g., ri-feather-line. Find more at remixicon.com",
          "default": "ri-feather-line"
        },
        {
          "type": "text",
          "id": "ksp_text",
          "label": "KSP Text",
          "default": "Fully open-ear design"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "C: Launch Banner",
      "blocks": [
        { "type": "ksp" },
        { "type": "ksp", "settings": { "icon_class": "ri-battery-2-charge-line", "ksp_text": "16-hour ultra-long battery life" } },
        { "type": "ksp", "settings": { "icon_class": "ri-surround-sound-line", "ksp_text": "Excellent bass performance" } }
      ]
    }
  ]
}
{% endschema %}

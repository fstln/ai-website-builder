  "name": "Custom: OWS Pro Features",
  "tag": "section",
  "class": "custom-feature-list-ows-pro-section",
  "max_blocks": 3,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Everything You Need"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",

{%- comment -%}
  This section highlights the key selling points of the OWS Pro.
  PM: Structures the content around the three core pillars: Audio, Battery, and Comfort.
  Designer: Uses a clean, icon-driven, three-column layout with generous spacing to enhance readability and visual appeal.
  Architect: Implements a flexible block-based structure for easy content management in the Shopify editor.
{%- endcomment -%}

{%- liquid
  assign section_id = 'custom-feature-list-' | append: section.id
  assign bg_color = section.settings.color_scheme
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ bg_color }}"
  data-section-id="{{ section.id }}"
  data-section-type="custom-feature-list-ows-pro"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    {%- if section.settings.heading != blank -%}
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-foreground">
          {{ section.settings.heading }}
        </h2>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-x-8 gap-y-12">
        {%- for block in section.blocks -%}
          <div class="text-center" {{ block.shopify_attributes }}>
            <div class="flex items-center justify-center h-16 w-16 mx-auto bg-primary/10 rounded-xl">
              {%- if block.settings.icon != blank -%}
                <span class="h-8 w-8 text-primary">
                  {{ block.settings.icon }}
                </span>
              {%- else -%}
                <svg class="h-8 w-8 text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              {%- endif -%}
            </div>
            {%- if block.settings.heading != blank -%}
              <h3 class="mt-6 text-xl font-semibold text-foreground">
                {{ block.settings.heading }}
              </h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="mt-2 text-base text-muted">
                {{ block.settings.description }}
              </p>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}

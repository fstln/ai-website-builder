{%- comment -%}
  CUSTOM SOCIAL PROOF SECTION
  - PM: Build trust and overcome skepticism with reviews (Consideration stage).
  - Designer: Clean, card-based grid layout on a calm, credible backdrop.
  - Architect: Implemented with a responsive grid and configurable review blocks.
{%- endcomment -%}

{%- liquid
  assign section_id = 'custom-social-proof-' | append: section.id
  assign heading = section.settings.heading
  assign color_scheme = section.settings.color_scheme
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ color_scheme }}"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-20">
    <div class="max-w-3xl mx-auto text-center">
      {%- if heading != blank -%}
        <h2 class="text-3xl sm:text-4xl font-bold tracking-tight text-foreground">
          {{ heading | escape }}
        </h2>
      {%- endif -%}
    </div>

    <div class="mt-12 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {%- for block in section.blocks -%}
        <div class="bg-surface text-foreground rounded-2xl shadow-sm p-8 flex flex-col" {{ block.shopify_attributes }}>
          <div class="flex items-center gap-1">
            {%- for i in (1..block.settings.rating) -%}
              {%- render 'icon-star' -%}
            {%- endfor -%}
          </div>
          
          {%- if block.settings.quote != blank -%}
            <blockquote class="mt-6 text-base">
              <p>"{{ block.settings.quote | escape }}"</p>
            </blockquote>
          {%- endif -%}
          
          <footer class="mt-auto pt-6">
            {%- if block.settings.author != blank -%}
              <p class="font-semibold">{{ block.settings.author | escape }}</p>
            {%- endif -%}
          </footer>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Social Proof",
  "tag": "section",
  "class": "custom-social-proof-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-2"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Don't just take our word for it"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "limit": 6,
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Rating",
          "default": 5
        },
        {
          "type": "text",
          "id": "quote",
          "label": "Quote",
          "default": "The bass is surprisingly deep for open-ear headphones. A game changer for my runs!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Alex D. - Verified Buyer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social Proof",
      "blocks": [
        { "type": "review" },
        {
          "type": "review",
          "settings": {
            "quote": "I wear these all day for work calls and forget they're even on. Incredibly comfortable.",
            "author": "Sarah K. - TechCrunch"
          }
        },
        {
          "type": "review",
          "settings": {
            "quote": "58 hours of battery is no joke. I charge the case maybe once a week. It's amazing.",
            "author": "Mike P. - Runner's World"
          }
        }
      ]
    }
  ]
}
{% endschema %}

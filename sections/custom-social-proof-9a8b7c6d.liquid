{%- liquid
  assign section_id = 'social-proof-' | append: section.id
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ section.settings.color_scheme }} py-12 sm:py-16 lg:py-20"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center justify-center gap-10 text-center">
      {%- if section.settings.heading != blank -%}
        <h2 class="text-sm font-bold uppercase tracking-[0.2em] text-muted">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="flex flex-wrap items-center justify-center gap-x-12 gap-y-8">
          {%- for block in section.blocks -%}
            {%- if block.settings.logo != blank -%}
              <img
                class="max-h-8 w-auto object-contain"
                src="{{ block.settings.logo | image_url: height: 64 }}"
                alt="{{ block.settings.logo.alt | escape }}"
                height="32"
                width="{{ 32 | times: block.settings.logo.aspect_ratio | round }}"
                loading="lazy"
              >
            {%- else -%}
               <img
                class="max-h-8 w-auto object-contain"
                src="https://placehold.co/120x40/fafafa/999999?text=Featured+On"
                alt="Placeholder for media logo"
                height="32"
                width="96"
                loading="lazy"
              >
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}

      {%- if section.settings.heritage_badge != blank or section.settings.heritage_text != blank -%}
        <div class="mt-8 rounded-2xl border border-border bg-surface p-8 shadow-sm">
          {%- if section.settings.heritage_badge != blank -%}
            <p class="font-semibold text-primary">{{ section.settings.heritage_badge }}</p>
          {%- endif -%}
          {%- if section.settings.heritage_text != blank -%}
            <p class="mt-2 text-lg text-foreground">{{ section.settings.heritage_text }}</p>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Social Proof",
  "tag": "section",
  "class": "social-proof-section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-2"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "As Seen On"
    },
    {
      "type": "header",
      "content": "Brand Heritage"
    },
    {
      "type": "text",
      "id": "heritage_badge",
      "label": "Heritage Badge",
      "default": "Founded by Ex-Bose Team"
    },
    {
      "type": "text",
      "id": "heritage_text",
      "label": "Heritage Text",
      "default": "Engineered for sound, designed for comfort."
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social Proof",
      "blocks": [
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" }
      ]
    }
  ]
}
{% endschema %}

{%- comment -%}
  CUSTOM KSP SECTION: BATTERY
  - PM: Focus on the single, powerful benefit of 58-hour battery life.
  - Designer: Minimalist, centered layout with a huge number as the focal point.
  - Architect: Implemented with Flexbox and uses color-scheme-2 for visual separation.
{%- endcomment -%}

{%- liquid
  assign section_id = 'custom-ksp-battery-' | append: section.id
  assign large_number = section.settings.large_number
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign background_image = section.settings.background_image
  assign color_scheme = section.settings.color_scheme
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ color_scheme }} relative overflow-hidden"
>
  {%- if background_image != blank -%}
    <div class="absolute inset-0">
      <img
        src="{{ background_image | image_url: width: 1920 }}"
        alt="{{ background_image.alt | default: 'Abstract background representing energy and endurance' | escape }}"
        width="{{ background_image.width }}"
        height="{{ background_image.height }}"
        loading="lazy"
        class="h-full w-full object-cover object-center opacity-10"
      >
    </div>
  {%- endif -%}

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 sm:py-24 lg:py-32">
    <div class="flex flex-col items-center text-center">
      <div class="max-w-3xl">
        {%- if large_number != blank -%}
          <p class="text-8xl sm:text-9xl font-extrabold tracking-tighter text-foreground" style="line-height: 1;">
            {{ large_number | escape }}
          </p>
        {%- endif -%}
        
        {%- if heading != blank -%}
          <h2 class="mt-4 text-4xl sm:text-5xl font-bold tracking-tight text-foreground">
            {{ heading | escape }}
          </h2>
        {%- endif -%}

        {%- if subheading != blank -%}
          <p class="mt-6 text-lg leading-8 text-muted">
            {{ subheading | escape }}
          </p>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "KSP: Battery Feature",
  "tag": "section",
  "class": "custom-ksp-battery-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-2"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "large_number",
      "label": "Large Number",
      "default": "58-Hour"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "GO FOR WEEKS, NOT DAYS"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Stop worrying about your battery. The OWS Pro offers a staggering 58 hours of total playtime, so you can focus on your audio, not the nearest outlet."
    }
  ],
  "presets": [
    {
      "name": "KSP: Battery Feature"
    }
  ]
}
{% endschema %}

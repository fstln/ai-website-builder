{%- liquid
  assign section_id = 'feature-highlights-' | append: section.id
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ section.settings.color_scheme }} bg-background py-16 sm:py-24"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
        {{ section.settings.heading }}
      </h2>
      <p class="mt-4 text-lg leading-8 text-muted">
        {{ section.settings.subheading }}
      </p>
    </div>
    <div class="mt-16 space-y-16">
      {%- for block in section.blocks -%}
        {%- assign image_order = forloop.index | modulo: 2 %}
        <div
          class="flex flex-col-reverse gap-8 lg:grid lg:grid-cols-12 lg:items-center lg:gap-16"
          {{ block.shopify_attributes }}
        >
          <div class="lg:col-span-5">
            <div class="
              {% if image_order == 0 %}
                lg:ml-auto
              {% endif %}
            ">
              <h3 class="text-2xl font-bold tracking-tight text-foreground sm:text-3xl">
                {{ block.settings.title }}
              </h3>
              <div class="mt-4 text-base leading-7 text-muted">
                {{ block.settings.description }}
              </div>
            </div>
          </div>
          <div class="lg:col-span-7
            {% assign image_order = forloop.index | modulo: 2 %}
            {% if image_order == 0 %}
              lg:order-first
            {% endif %}
          ">
            {%- if block.settings.image != blank -%}
              <img
                class="w-full rounded-xl shadow-xl object-cover aspect-[4/3]"
                src="{{ block.settings.image | image_url: width: 1200 }}"
                alt="{{ block.settings.image.alt | escape }}"
                width="800"
                height="600"
                loading="lazy"
              >
            {%- else -%}
              <img
                class="w-full rounded-xl shadow-xl object-cover aspect-[4/3]"
                src="https://placehold.co/800x600/E2E8F0/4A5568?text=Feature+Highlight"
                alt="Placeholder for feature highlight"
                width="800"
                height="600"
                loading="lazy"
              >
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Feature Highlight",
  "tag": "section",
  "class": "custom-feature-highlights-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Experience the Oladance Difference"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Every detail of the OWS Pro is engineered for performance and comfort."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Entirely open ear design"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>With our patented open ear design, the OWS Pro keeps you in sync with your surroundings, without sealing the ear canal.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Feature Highlight",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}

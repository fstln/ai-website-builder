{%- comment -%}
  This section manages user expectations by clearly listing package contents.
  - PM: Focused on transparency to prevent post-purchase issues.
  - Designer: Used an asymmetric layout with an image and a list for visual appeal.
  - Architect: Built with a configurable schema for the image and a block-based list.
{%- endcomment -%}

{%- liquid
  assign fallback_section_id = 'custom-in-the-box-ows-pro-f6g7h8i9-' | append: section.index
  assign section_id = section.settings.section_id | default: fallback_section_id
-%}

<section id="{{ section_id | escape }}" class="color-scheme color-{{ section.settings.color_scheme }} bg-background py-16 sm:py-20 lg:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-12 items-center">
      <div class="order-last md:order-first">
        <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl font-heading">{{ section.settings.heading }}</h2>
        <p class="mt-6 text-lg leading-8 text-muted">{{ section.settings.subheading }}</p>
        <dl class="mt-10 space-y-4 text-base leading-7 text-foreground">
          {%- for block in section.blocks -%}
            <div class="flex items-center gap-x-3" {{ block.shopify_attributes }}>
              <svg class="h-6 w-6 flex-none text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              <span>{{ block.settings.item_text }}</span>
            </div>
          {%- endfor -%}
        </dl>
      </div>
      <div class="flex items-center justify-center">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.image.alt | escape }}"
            width="800"
            height="800"
            class="w-full max-w-md rounded-2xl object-cover shadow-lg"
            loading="lazy"
          >
        {%- else -%}
          <img
            src="https://placehold.co/800x800/F3F4F6/333333?text=What's+in+the+Box"
            alt="Placeholder for Oladance OWS Pro box contents"
            width="800"
            height="800"
            class="w-full max-w-md rounded-2xl object-cover shadow-lg"
            loading="lazy"
          >
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom:In the Box(Pro)",
  "tag": "section",
  "class": "custom-in-the-box-ows-pro-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "default": "",
      "info": "Used for anchor links. Defaults to custom-in-the-box-ows-pro-f6g7h8i9-{index} when left blank."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What's in the Box"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Everything you get with your Oladance OWS Pro."
    }
  ],
  "blocks": [
    {
      "type": "list_item",
      "name": "List Item",
      "settings": [
        {
          "type": "text",
          "id": "item_text",
          "label": "Item Text",
          "default": "Oladance OWS Pro Earphones"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom:In the Box(OWS Pro)",
      "blocks": [
        { "type": "list_item", "settings": { "item_text": "Oladance OWS Pro Earphones" } },
        { "type": "list_item", "settings": { "item_text": "Charging Case" } },
        { "type": "list_item", "settings": { "item_text": "Type-C Cable" } },
        { "type": "list_item", "settings": { "item_text": "User Manual" } },
        { "type": "list_item", "settings": { "item_text": "Brand Card" } }
      ]
    }
  ]
}
{% endschema %}

{% comment %}
  Main Page Section
  Theme 2.0 - Sections Everywhere
{% endcomment %}

<div class="container-custom py-8">
  {% render 'breadcrumbs' %}
  
  <article class="page-content mt-8 {% if section.settings.narrow_layout %}max-w-3xl mx-auto{% else %}max-w-5xl mx-auto{% endif %}">
    {%- comment -%} Page Header {%- endcomment -%}
    <header class="page-header mb-8 {% if section.settings.header_alignment == 'center' %}text-center{% endif %}">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{{ page.title }}</h1>
      
      {% if page.metafields.custom.subtitle != blank %}
        <p class="text-xl text-text-secondary">
          {{ page.metafields.custom.subtitle }}
        </p>
      {% endif %}
    </header>
    
    {%- comment -%} Page Content with Prose Styles {%- endcomment -%}
    <div class="prose prose-lg max-w-none
      prose-headings:font-bold
      prose-h2:text-3xl prose-h2:mt-8 prose-h2:mb-4
      prose-h3:text-2xl prose-h3:mt-6 prose-h3:mb-3
      prose-h4:text-xl prose-h4:mt-4 prose-h4:mb-2
      prose-p:mb-4 prose-p:leading-relaxed
      prose-a:text-primary prose-a:no-underline hover:prose-a:underline
      prose-strong:font-bold prose-strong:text-text
      prose-ul:list-disc prose-ul:pl-6 prose-ul:mb-4
      prose-ol:list-decimal prose-ol:pl-6 prose-ol:mb-4
      prose-li:mb-2
      prose-blockquote:border-l-4 prose-blockquote:border-primary prose-blockquote:pl-4 prose-blockquote:italic prose-blockquote:my-6
      prose-img:rounded-lg prose-img:my-6
      prose-hr:my-8 prose-hr:border-border
      prose-table:w-full prose-table:my-6
      prose-thead:border-b-2 prose-thead:border-border
      prose-th:p-3 prose-th:text-left prose-th:font-bold
      prose-td:p-3 prose-td:border-t prose-td:border-border
      prose-pre:bg-background-secondary prose-pre:p-4 prose-pre:rounded-lg prose-pre:my-6
      prose-code:bg-background-secondary prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm
    ">
      {{ page.content }}
    </div>
    
    {%- comment -%} Page Footer / CTA {%- endcomment -%}
    {% if section.settings.show_cta and section.settings.cta_text != blank %}
      <div class="page-footer mt-12 pt-8 border-t border-border text-center">
        <a href="{{ section.settings.cta_link }}" class="btn btn-primary">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </article>
</div>

{% schema %}
{
  "name": "Main Page",
  "tag": "section",
  "class": "section-main-page",
  "settings": [
    {
      "type": "checkbox",
      "id": "narrow_layout",
      "label": "Use narrow layout",
      "default": true,
      "info": "Narrow layout is better for reading long text"
    },
    {
      "type": "select",
      "id": "header_alignment",
      "label": "Header alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show call to action button",
      "default": false
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link"
    }
  ]
}
{% endschema %}


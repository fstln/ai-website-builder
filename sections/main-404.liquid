{% comment %}
  Main 404 Section
  Theme 2.0 - Sections Everywhere
{% endcomment %}

{% assign section_color_scheme = section.settings.color_scheme | default: 'scheme-1' %}

<section class="color-scheme color-{{ section_color_scheme }} section-main-404">
  <div class="container-custom">
    <div class="error-404 flex items-center justify-center text-center py-24">
      <div>
        <h1 class="text-6xl font-bold mb-4">404</h1>
        <h2 class="text-2xl font-medium mb-4">{{ 'general.404.title' | t }}</h2>
        <p class="text-muted mb-8">{{ 'general.404.subtext' | t }}</p>
        
        <div class="space-x-4">
          <a href="/" class="btn btn-primary">{{ 'general.404.link' | t | default: 'Back to Home' }}</a>
          <a href="/collections/all" class="btn btn-outline-primary">{{ 'general.continue_shopping' | t | default: 'Continue Shopping' }}</a>
        </div>
        
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main 404",
  "tag": "section",
  "class": "section-main-404",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}

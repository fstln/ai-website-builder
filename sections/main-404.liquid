{% comment %}
  Main 404 Section
  Theme 2.0 - Sections Everywhere
{% endcomment %}

<div class="container-custom">
  <div class="error-404 min-h-screen flex items-center justify-center text-center py-12">
    <div>
      <h1 class="text-6xl font-bold mb-4">404</h1>
      <h2 class="text-2xl font-medium mb-4">{{ 'general.404.title' | t }}</h2>
      <p class="text-text-secondary mb-8">{{ 'general.404.subtext' | t }}</p>
      
      <div class="space-x-4">
        <a href="/" class="btn btn-primary">{{ 'general.404.link' | t | default: 'Back to Home' }}</a>
        <a href="/collections/all" class="btn btn-secondary">{{ 'general.continue_shopping' | t | default: 'Continue Shopping' }}</a>
      </div>
      
      <div class="mt-12">
        <form action="/search" method="get" class="search-form max-w-md mx-auto">
          <div class="flex gap-2">
            <input 
              type="search" 
              name="q" 
              placeholder="{{ 'general.search.placeholder' | t }}"
              class="flex-grow border rounded-md px-4 py-2"
            >
            <button type="submit" class="btn btn-primary">{{ 'general.search.submit' | t | default: 'Search' }}</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Main 404",
  "tag": "section",
  "class": "section-main-404",
  "settings": []
}
{% endschema %}


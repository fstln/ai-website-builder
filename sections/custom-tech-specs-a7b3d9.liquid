{%- liquid
  assign section_id = 'tech-specs-' | append: section.id
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ section.settings.color_scheme }} bg-surface-muted py-16 sm:py-24"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
        {{ section.settings.heading }}
      </h2>
    </div>
    <div class="mt-12">
      <dl class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 lg:gap-x-8">
        {%- for block in section.blocks -%}
          <div class="border-t border-border/60 pt-4" {{ block.shopify_attributes }}>
            <dt class="font-medium text-foreground">{{ block.settings.spec_title }}</dt>
            <dd class="mt-2 text-sm text-muted">{{ block.settings.spec_value }}</dd>
          </div>
        {%- endfor -%}
      </dl>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Tech Specs",
  "tag": "section",
  "class": "custom-tech-specs-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Technical Specifications"
    }
  ],
  "blocks": [
    {
      "type": "spec",
      "name": "Specification",
      "settings": [
        {
          "type": "text",
          "id": "spec_title",
          "label": "Spec Title",
          "default": "Dimensions"
        },
        {
          "type": "text",
          "id": "spec_value",
          "label": "Spec Value",
          "default": "Earphone: 57*45*22.5 (mm)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Tech Specs",
      "blocks": [
        { "type": "spec", "settings": { "spec_title": "Dimensions", "spec_value": "Earphone: 57*45*22.5 (mm)" } },
        { "type": "spec", "settings": { "spec_title": "Weight", "spec_value": "Single Earphone: 13.8g" } },
        { "type": "spec", "settings": { "spec_title": "Battery Life", "spec_value": "Single Earphone: 16H" } },
        { "type": "spec", "settings": { "spec_title": "Bluetooth Version", "spec_value": "V5.3" } },
        { "type": "spec", "settings": { "spec_title": "Waterproof Rating", "spec_value": "IPX4" } },
        { "type": "spec", "settings": { "spec_title": "Material", "spec_value": "Skin-friendly silicone" } }
      ]
    }
  ]
}
{% endschema %}

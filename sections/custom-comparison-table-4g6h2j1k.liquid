{%- liquid
  assign section_id = 'comparison-table-' | append: section.id
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ section.settings.color_scheme }} py-12 sm:py-16 lg:py-20"
>
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
    {%- if section.settings.heading != blank -%}
      <h2 class="text-center text-3xl sm:text-4xl font-bold tracking-tight text-foreground">{{ section.settings.heading }}</h2>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <p class="mt-4 text-center text-lg text-muted">{{ section.settings.subheading }}</p>
    {%- endif -%}

    <div class="mt-10 overflow-x-auto">
      <div class="min-w-full rounded-2xl border border-border bg-surface shadow-lg">
        <div class="grid grid-cols-3 font-semibold text-foreground">
          <div class="p-4 sm:p-5">{{ section.settings.col_1_header }}</div>
          <div class="border-l border-border bg-primary/5 p-4 sm:p-5">{{ section.settings.col_2_header }}</div>
          <div class="border-l border-border p-4 sm:p-5">{{ section.settings.col_3_header }}</div>
        </div>

        {%- for block in section.blocks -%}
          <div class="grid grid-cols-3 border-t border-border text-sm text-foreground" {{ block.shopify_attributes }}>
            <div class="p-4 sm:p-5 font-medium">{{ block.settings.feature_name }}</div>
            <div class="border-l border-border bg-primary/5 p-4 sm:p-5 font-semibold">{{ block.settings.our_product_value }}</div>
            <div class="border-l border-border p-4 sm:p-5 text-muted">{{ block.settings.competitor_product_value }}</div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Comparison Table",
  "tag": "section",
  "class": "comparison-table-section",
  "max_blocks": 8,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Compare The Specs"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "See how we stack up against the competition."
    },
    {
      "type": "text",
      "id": "col_1_header",
      "label": "Column 1 Header",
      "default": "Feature"
    },
    {
      "type": "text",
      "id": "col_2_header",
      "label": "Column 2 Header",
      "default": "Our Product"
    },
    {
      "type": "text",
      "id": "col_3_header",
      "label": "Column 3 Header",
      "default": "Competitor"
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "text",
          "id": "feature_name",
          "label": "Feature Name",
          "default": "Battery Life"
        },
        {
          "type": "text",
          "id": "our_product_value",
          "label": "Our Product Value",
          "default": "Up to 58 Hours"
        },
        {
          "type": "text",
          "id": "competitor_product_value",
          "label": "Competitor Value",
          "default": "Up to 48 Hours"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison Table",
      "blocks": [
        { "type": "row" },
        { "type": "row" },
        { "type": "row" }
      ]
    }
  ]
}
{% endschema %}

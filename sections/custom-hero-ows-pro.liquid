{%- comment -%}
  This section is designed to be a high-impact, visually-driven hero for the OWS Pro product.
  It uses an asymmetric layout to create a sense of dynamism and sophistication.
  PM: Defines the core message - "HEAR THE BASS, NOT THE NOISE".
  Designer: Implements an asymmetric layout with overlapping elements and bold typography.
  Architect: Ensures clean, utility-first code and robust Liquid implementation.
{%- endcomment -%}

{%- liquid
  assign section_id = 'custom-hero-' | append: section.id
  assign bg_color = section.settings.color_scheme
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ bg_color }} isolate overflow-hidden"
  data-section-id="{{ section.id }}"
  data-section-type="custom-hero-ows-pro"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 items-center">
      
      {%- comment -%} Text Content - takes 5 columns on desktop {%- endcomment -%}
      <div class="md:col-span-5 text-center md:text-left">
        {%- if section.settings.eyebrow_text != blank -%}
          <p class="mb-4 text-sm font-bold uppercase tracking-[0.2em] text-primary">
            {{ section.settings.eyebrow_text }}
          </p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h1 class="text-5xl md:text-6xl font-extrabold tracking-tight text-foreground">
            {{ section.settings.heading }}
          </h1>
        {%- endif -%}

        {%- if section.settings.subheading != blank -%}
          <p class="mt-6 text-lg leading-relaxed text-muted">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}

        {%- if section.settings.cta_text != blank and section.settings.cta_link != blank -%}
          <div class="mt-10">
            <a href="{{ section.settings.cta_link }}" class="btn btn-primary text-lg px-8 py-4">
              {{ section.settings.cta_text }}
            </a>
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Image Content - takes 7 columns on desktop and overlaps {%- endcomment -%}
      <div class="md:col-span-7 relative">
        {%- if section.settings.image != blank -%}
          <div class="relative aspect-[4/3] md:aspect-[16/9] lg:aspect-[4/3] xl:aspect-[16/9]">
            <img
              src="{{ section.settings.image | image_url: width: 1200 }}"
              alt="{{ section.settings.image.alt | escape }}"
              width="1200"
              height="{{ 1200 | divided_by: section.settings.image.aspect_ratio | round }}"
              loading="eager"
              class="absolute inset-0 w-full h-full object-cover rounded-2xl shadow-xl"
            >
          </div>
        {%- else -%}
          <div class="relative aspect-[4/3] md:aspect-[16/9] lg:aspect-[4/3] xl:aspect-[16/9] bg-surface rounded-2xl shadow-xl">
            {{ 'image' | placeholder_svg_tag: 'w-full h-full object-cover text-muted' }}
          </div>
        {%- endif -%}
      </div>

    </div>
  </div>
</section>

<style>
  #{{ section_id }} .md\\:col-span-7 {
    position: relative;
    z-index: 1;
  }

  @media (min-width: 768px) {
    #{{ section_id }} .md\\:col-span-7 {
      transform: translateX(10%);
    }
  }
</style>

{% schema %}
{
  "name": "Custom: OWS Pro Hero",
  "tag": "section",
  "class": "custom-hero-ows-pro-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-2"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow Text",
      "default": "OWS Pro"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "HEAR THE BASS, NOT THE NOISE"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Tired of 'tinny' open-ear sound? Our patented tech delivers deep, rich bass you can feel, while Focus Mode tunes out ambient voices.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom: OWS Pro Hero"
    }
  ]
}
{% endschema %}

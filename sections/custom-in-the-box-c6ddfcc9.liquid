{%- comment -%}
  This section clearly lists and shows what's included in the product package.
  It helps manage customer expectations.
{%- endcomment -%}

{%- liquid
  assign section_id = 'in-the-box-' | append: section.id
-%}

<div id="{{ section_id }}" class="color-scheme color-{{ section.settings.color_scheme }}">
  <div class="container-custom py-12 md:py-24">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="prose prose-lg text-foreground-muted">
        {%- if section.settings.heading != blank -%}
          <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-foreground mb-8">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        
        <ul class="list-none p-0">
          {%- for block in section.blocks -%}
            <li class="flex items-center mb-4">
              {%- render 'icon', name: 'check-circle', class: 'w-6 h-6 text-primary mr-4 flex-shrink-0' -%}
              <span>{{ block.settings.item_text }}</span>
            </li>
          {%- endfor -%}
        </ul>
      </div>
      <div>
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1000 | image_tag: class: 'rounded-2xl shadow-lg', loading: 'lazy', sizes: '(min-width: 768px) 50vw, 100vw' }}
        {%- else -%}
          <img src="https://placehold.co/600x600/1E1E1E/FFFFFF?text=What's+in+the+Box" alt="Package contents placeholder" class="rounded-2xl shadow-lg w-full">
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom In The Box",
  "tag": "section",
  "class": "custom-in-the-box-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-2"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What's in the Box"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "limit": 8,
      "settings": [
        {
          "type": "text",
          "id": "item_text",
          "label": "Item Text",
          "default": "Oladance OWS Pro"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom In The Box"
    }
  ]
}
{% endschema %}

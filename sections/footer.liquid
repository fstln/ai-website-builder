{% comment %}
  Footer Section - Links, Social Media, Copyright
{% endcomment %}

<footer class="site-footer bg-border border-t mt-16" data-section-id="{{ section.id }}" data-section-type="footer">
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- About -->
      <div class="footer-column">
        <h3 class="font-bold mb-4">{{ section.settings.column_1_title }}</h3>
        <div class="text-sm text-text-secondary">
          {{ section.settings.column_1_content }}
        </div>
      </div>
      
      <!-- Quick Links -->
      <div class="footer-column">
        <h3 class="font-bold mb-4">{{ section.settings.column_2_title }}</h3>
        <ul class="space-y-2 text-sm">
          {% for link in linklists[section.settings.footer_menu].links %}
            <li>
              <a href="{{ link.url }}" class="text-text-secondary hover:text-primary">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Customer Service -->
      <div class="footer-column">
        <h3 class="font-bold mb-4">{{ section.settings.column_3_title }}</h3>
        <ul class="space-y-2 text-sm">
          {% for link in linklists[section.settings.footer_menu_2].links %}
            <li>
              <a href="{{ link.url }}" class="text-text-secondary hover:text-primary">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Social Media -->
      <div class="footer-column">
        <h3 class="font-bold mb-4">{{ section.settings.column_4_title }}</h3>
        <div class="flex space-x-4">
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="text-text-secondary hover:text-primary" target="_blank" rel="noopener">
              {% render 'icon', name: 'facebook' %}
            </a>
          {% endif %}
          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" class="text-text-secondary hover:text-primary" target="_blank" rel="noopener">
              {% render 'icon', name: 'instagram' %}
            </a>
          {% endif %}
          {% if settings.social_twitter_link != blank %}
            <a href="{{ settings.social_twitter_link }}" class="text-text-secondary hover:text-primary" target="_blank" rel="noopener">
              {% render 'icon', name: 'twitter' %}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="footer-bottom mt-8 pt-8 border-t text-center text-sm text-text-secondary">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "column_1_title",
      "label": "Column 1 Title",
      "default": "About Us"
    },
    {
      "type": "richtext",
      "id": "column_1_content",
      "label": "Column 1 Content"
    },
    {
      "type": "text",
      "id": "column_2_title",
      "label": "Column 2 Title",
      "default": "Quick Links"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Column 2 Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "column_3_title",
      "label": "Column 3 Title",
      "default": "Customer Service"
    },
    {
      "type": "link_list",
      "id": "footer_menu_2",
      "label": "Column 3 Menu"
    },
    {
      "type": "text",
      "id": "column_4_title",
      "label": "Column 4 Title",
      "default": "Follow Us"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "All rights reserved."
    }
  ]
}
{% endschema %}


{%- comment -%}
  Section: Social Proof
  Renders a section with a main rating, review cards, and logos of publications.
{%- endcomment -%}

{%- liquid
  assign section_id_fallback = 'social-proof-' | append: section.id
  assign section_dom_id = section.settings.section_id | default: section_id_fallback | escape
-%}

<section
  id="{{ section_dom_id }}"
  class="py-16 lg:py-24 bg-white"
  data-section-id="{{ section.id }}"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 lg:mb-16">
      {%- if section.settings.heading != blank -%}
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 font-['Outfit']">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      <div class="flex items-center justify-center gap-2 mb-2">
        <div class="flex gap-1">
          {%- for i in (1..5) -%}
            <i class="ri-star-fill text-2xl text-[#5E89FF]"></i>
          {%- endfor -%}
        </div>
        {%- if section.settings.rating_value != blank -%}
          <span class="text-lg font-semibold text-gray-900">{{ section.settings.rating_value }}</span>
        {%- endif -%}
      </div>

      {%- if section.settings.rating_caption != blank -%}
        <p class="text-gray-600">{{ section.settings.rating_caption }}</p>
      {%- endif -%}
    </div>

    {%- if section.blocks.size > 0 -%}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 mb-16">
        {%- for block in section.blocks -%}
          {%- if block.type == 'review' -%}
            <div
              class="bg-white rounded-3xl p-8 shadow-xl hover:shadow-2xl transition-shadow duration-300 border border-gray-100"
              data-review-card
              {{ block.shopify_attributes }}
            >
              <div class="flex gap-1 mb-4">
                {%- assign rating = block.settings.rating | default: 5 | times: 1 -%}
                {%- for i in (1..rating) -%}
                  <i class="ri-star-fill text-lg text-[#5E89FF]"></i>
                {%- endfor -%}
              </div>
              {%- if block.settings.quote != blank -%}
                <blockquote class="text-gray-700 text-base leading-relaxed mb-6">
                  {{ block.settings.quote }}
                </blockquote>
              {%- endif -%}
              <div class="flex items-center gap-4">
                {%- if block.settings.author_image != blank -%}
                  <img
                    src="{{ block.settings.author_image | image_url: width: 96, height: 96, crop: 'center' }}"
                    alt="{{ block.settings.author_image.alt | default: block.settings.author_name | escape }}"
                    class="w-12 h-12 rounded-full"
                    width="48"
                    height="48"
                    loading="lazy"
                  >
                {%- else -%}
                  <img
                    src="https://placehold.co/48x48/A8B8FF/ffffff?text={{ block.settings.author_name | slice: 0, 2 | escape }}"
                    alt="{{ block.settings.author_name | escape }} placeholder"
                    class="w-12 h-12 rounded-full"
                    width="48"
                    height="48"
                  >
                {%- endif -%}
                <div>
                  {%- if block.settings.author_name != blank -%}
                    <div class="font-semibold text-gray-900">{{ block.settings.author_name }}</div>
                  {%- endif -%}
                  {%- if block.settings.author_title != blank -%}
                    <div class="text-sm text-gray-500">{{ block.settings.author_title }}</div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="text-center">
      {%- if section.settings.featured_in_heading != blank -%}
        <p class="text-sm text-gray-500 uppercase tracking-wider mb-8 font-semibold">
          {{ section.settings.featured_in_heading }}
        </p>
      {%- endif -%}
      <div class="flex flex-wrap items-center justify-center gap-8 lg:gap-16">
        {%- for block in section.blocks -%}
          {%- if block.type == 'logo' -%}
            <a
              href="{{ block.settings.link | default: '#' }}"
              class="inline-block"
              {{ block.shopify_attributes }}
            >
              {%- if block.settings.logo_image != blank -%}
                <img
                  src="{{ block.settings.logo_image | image_url: width: 320, height: 96 }}"
                  alt="{{ block.settings.logo_image.alt | default: 'Featured publication logo' | escape }}"
                  class="h-8 lg:h-10 opacity-60 hover:opacity-100 transition-opacity duration-300 grayscale hover:grayscale-0"
                  width="{{ block.settings.logo_image.width }}"
                  height="{{ block.settings.logo_image.height }}"
                  style="max-width: {{ block.settings.max_width }}px;"
                  loading="lazy"
                >
              {%- else -%}
                <img
                  src="https://placehold.co/160x48/333333/ffffff?text={{ block.settings.placeholder_text | default: 'Logo' | escape }}"
                  alt="Publication logo placeholder"
                  class="h-8 lg:h-10 opacity-60 hover:opacity-100 transition-opacity duration-300 grayscale hover:grayscale-0"
                >
              {%- endif -%}
            </a>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "C: Social Proof",
  "tag": "section",
  "class": "custom-social-proof",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "info": "Used for anchor links from navigation."
    },
    {
      "type": "header",
      "content": "t:sections.all.headers.content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trusted by Audio Enthusiasts"
    },
    {
      "type": "text",
      "id": "rating_value",
      "label": "Rating Value",
      "default": "4.9/5.0"
    },
    {
      "type": "text",
      "id": "rating_caption",
      "label": "Rating Caption",
      "default": "Based on 12,847+ verified reviews"
    },
    {
      "type": "text",
      "id": "featured_in_heading",
      "label": "Featured In Heading",
      "default": "Featured In"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review Card",
      "limit": 3,
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "label": "Star Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "richtext",
          "id": "quote",
          "label": "Quote",
          "default": "<p>The sound quality is absolutely phenomenal. I've tried dozens of earbuds, but the OWS 2's open-ear design is unmatched.</p>"
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "Author Image"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "Sarah J."
        },
        {
          "type": "text",
          "id": "author_title",
          "label": "Author Title",
          "default": "Verified Buyer"
        }
      ]
    },
    {
      "type": "logo",
      "name": "Publication Logo",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "placeholder_text",
          "label": "Placeholder Text",
          "info": "Shown if no image is selected.",
          "default": "TechCrunch"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "range",
          "id": "max_width",
          "label": "Max Width",
          "min": 80,
          "max": 240,
          "step": 8,
          "unit": "px",
          "default": 160
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "C: Social Proof",
      "blocks": [
        { "type": "review" },
        { "type": "review" },
        { "type": "review" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" }
      ]
    }
  ]
}
{% endschema %}

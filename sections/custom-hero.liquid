{% comment %} /sections/custom-hero.liquid {% endcomment %}
<section
  class="relative w-full overflow-hidden"
  style="--section-bg: {{ section.settings.background_color }}; --gradient-start: {{ section.settings.gradient_start }}; --gradient-end: {{ section.settings.gradient_end }};"
>
  <div class="bg-[var(--section-bg)] pt-12 pb-16 lg:pt-24 lg:pb-32">
    <div class="container mx-auto px-6 max-w-[1200px]">
      <div class="flex flex-col-reverse lg:flex-row items-center gap-12 lg:gap-20">
        <div class="w-full lg:w-1/2 flex flex-col items-center lg:items-start text-center lg:text-left z-10">
          {%- if section.settings.heading != blank -%}
            <h1 class="font-display font-bold text-4xl md:text-5xl lg:text-6xl text-gray-900 leading-[1.1] mb-6 tracking-tight">
              {{ section.settings.heading }}
            </h1>
          {%- endif -%}

          {%- if section.settings.subheading != blank -%}
            <div class="font-sans text-lg text-gray-600 mb-8 leading-relaxed max-w-md">
              {{ section.settings.subheading }}
            </div>
          {%- endif -%}

          {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
            <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
              <a
                href="{{ section.settings.button_link }}"
                class="group relative inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-black rounded-full overflow-hidden transition-all duration-300 hover:bg-brand-blue focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-blue"
              >
                <span>{{ section.settings.button_label }}</span>
              </a>
            </div>
          {%- endif -%}
        </div>

        <div class="w-full lg:w-1/2 relative">
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-gradient-to-tr from-[var(--gradient-start)] to-[var(--gradient-end)] rounded-full blur-3xl -z-10"></div>
          <div class="relative rounded-3xl overflow-hidden shadow-2xl shadow-brand-blue/10">
            {%- if section.settings.image != blank -%}
              <img
                src="{{ section.settings.image | image_url: width: 1200 }}"
                alt="{{ section.settings.image.alt | escape }}"
                width="600"
                height="700"
                loading="lazy"
                class="w-full h-auto object-cover"
              >
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-full h-auto object-cover' }}
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "C: Hero",
  "tag": "section",
  "class": "custom-hero-section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FAFAFA"
    },
    {
      "type": "color_background",
      "id": "gradient_start",
      "label": "Gradient Start Color",
      "default": "rgba(168, 184, 255, 0.2)"
    },
    {
      "type": "color_background",
      "id": "gradient_end",
      "label": "Gradient End Color",
      "default": "rgba(94, 137, 255, 0.1)"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heyup Store"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Curated Tech Outlet. Now Featuring: Oladance.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Explore Oladance Series"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "C: Hero"
    }
  ]
}
{% endschema %}

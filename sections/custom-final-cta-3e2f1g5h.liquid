{%- liquid
  assign section_id = 'final-cta-' | append: section.id
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ section.settings.color_scheme }} py-16 sm:py-20 lg:py-24"
>
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
    {%- if section.settings.heading != blank -%}
      <h2 class="text-4xl sm:text-5xl font-extrabold tracking-tight text-foreground">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <p class="mt-6 text-lg leading-relaxed text-muted">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}
    {%- if section.settings.button_label != blank -%}
      <div class="mt-10">
        <a
          href="{{ section.settings.button_link | default: '#' }}"
          class="btn btn-primary text-base font-medium px-8 py-4"
        >
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Final CTA",
  "tag": "section",
  "class": "final-cta-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get Your OWS Pro Today"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Limited stock. Free Shipping. Final Sale."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "YES, I WANT TO SAVE $100"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Final CTA"
    }
  ]
}
{% endschema %}

{% comment %}
  页眉部分 - 导航、品牌、购物车图标
{% endcomment %}

<header class="site-header bg-white border-b sticky top-0 z-50" data-section-id="{{ section.id }}" data-section-type="header">
  <div class="container-custom">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="header-logo">
        <a href="/" class="flex items-center">
          {% if settings.logo %}
            <img src="{{ settings.logo | image_url: width: settings.logo_width }}" alt="{{ shop.name }}" class="h-8">
          {% else %}
            <span class="text-2xl font-bold">{{ shop.name }}</span>
          {% endif %}
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="header-nav hidden md:block">
        <ul class="flex space-x-6">
          {% for link in linklists.main-menu.links %}
            <li>
              <a href="{{ link.url }}" class="text-gray-700 hover:text-black font-medium">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
      
      <!-- Actions -->
      <div class="header-actions flex items-center space-x-4">
        <!-- Search Icon -->
        <a href="/search" class="text-gray-700 hover:text-black">
          {% render 'icon', name: 'search' %}
        </a>
        
        <!-- Cart -->
        <a href="/cart" class="text-gray-700 hover:text-black relative" data-cart-icon>
          {% render 'icon', name: 'cart' %}
          <span class="cart-count absolute -top-2 -right-2 bg-black text-white text-xs rounded-full w-5 h-5 flex items-center justify-center" data-cart-count>
            {{ cart.item_count }}
          </span>
        </a>
        
        <!-- Mobile Menu Toggle -->
        <button class="md:hidden text-gray-700 hover:text-black" data-mobile-menu-toggle>
          {% render 'icon', name: 'menu' %}
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <nav class="mobile-nav md:hidden hidden" data-mobile-nav>
      <ul class="py-4 space-y-4">
        {% for link in linklists.main-menu.links %}
          <li>
            <a href="{{ link.url }}" class="block text-gray-700 hover:text-black font-medium">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "页眉",
  "settings": []
}
{% endschema %}


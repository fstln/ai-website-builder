{%- comment -%}
  This section is designed to showcase the key features of the Oladance OWS Pro.
  It uses a modern, asymmetrical layout with bold typography to highlight the product's selling points.
{%- endcomment -%}

{%- liquid
  assign section_id = 'feature-list-' | append: section.id
  assign bg_color = section.settings.color_scheme.settings.background
  assign text_color = section.settings.color_scheme.settings.text
-%}

<div id="{{ section_id }}" class="color-scheme color-{{ section.settings.color_scheme }} isolate">
  <div class="container-custom py-12 md:py-24">
    <div class="max-w-3xl mx-auto text-center mb-12 md:mb-16">
      {%- if section.settings.heading != blank -%}
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-foreground">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}
      {%- if section.settings.subheading != blank -%}
        <p class="mt-4 text-lg text-foreground-muted">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}
    </div>

    <div class="grid gap-12 md:gap-16">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'feature' -%}
            {% assign modulo = forloop.index | modulo: 2 %}
            <div class="grid md:grid-cols-2 gap-8 items-center {% if mofulo == 0 %}md:grid-flow-col-dense md:grid-cols-2 md:gap-12{% endif %}">
              <div class="{% if modulo == 0 %}md:col-start-2{% endif %}">
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 1200 | image_tag: class: 'rounded-2xl shadow-lg', loading: 'lazy', sizes: '(min-width: 768px) 50vw, 100vw' }}
                {%- else -%}
                  <img src="https://placehold.co/600x400/1E1E1E/FFFFFF?text=Feature+Image" alt="Feature placeholder image" class="rounded-2xl shadow-lg w-full">
                {%- endif -%}
              </div>
              <div class="prose prose-lg text-foreground-muted">
                {%- if block.settings.icon != blank -%}
                  <div class="mb-4">
                    {%- render 'icon', name: block.settings.icon, class: 'w-10 h-10 text-primary' -%}
                  </div>
                {%- endif -%}
                {%- if block.settings.title != blank -%}
                  <h3 class="text-2xl font-bold text-foreground">{{ block.settings.title }}</h3>
                {%- endif -%}
                {%- if block.settings.description != blank -%}
                  <p>{{ block.settings.description }}</p>
                {%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Feature List",
  "tag": "section",
  "class": "custom-feature-list-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Experience the Difference"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover the innovative technology that makes Oladance OWS Pro unique."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon Name",
          "info": "e.g., 'sound-wave'. Refer to snippets/icon.liquid for available icons."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Describe the feature in detail here. Explain the benefit to the user."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Feature List"
    }
  ]
}
{% endschema %}
{% comment %}
  Main Collection Section
  Theme 2.0 - Sections Everywhere
{% endcomment %}

{% assign section_color_scheme = section.settings.color_scheme | default: 'scheme-1' %}

<section class="color-scheme color-{{ section_color_scheme }} section-main-collection">
  <div class="container-custom py-8">
  {% render 'breadcrumbs' %}
  
  <div class="collection-header mt-8 mb-12 text-center">
    <h1 class="text-4xl font-bold mb-4">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="prose mx-auto">
        {{ collection.description }}
      </div>
    {% endif %}
  </div>
  
  <div class="collection-products">
    {% if collection.products.size > 0 %}
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {% for product in collection.products %}
          {% render 'product-card', product: product %}
        {% endfor %}
      </div>
      
      {% if paginate.pages > 1 %}
        <div class="pagination mt-12 flex justify-center gap-2">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="btn btn-outline-primary">{{ 'general.pagination.previous' | t | default: 'Previous' }}</a>
          {% endif %}
          
          <span class="px-4 py-2">Page {{ paginate.current_page }} of {{ paginate.pages }}</span>
          
          {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="btn btn-outline-primary">{{ 'general.pagination.next' | t | default: 'Next' }}</a>
          {% endif %}
        </div>
      {% endif %}
    {% else %}
      <div class="text-center py-12">
        <p class="text-muted">{{ 'collections.general.no_matches' | t }}</p>
      </div>
    {% endif %}
    </div>
  </div>
</section>

{% paginate collection.products by 12 %}
  {% comment %} Pagination logic handled above {% endcomment %}
{% endpaginate %}

{% schema %}
{
  "name": "Main Collection",
  "tag": "section",
  "class": "section-main-collection",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}

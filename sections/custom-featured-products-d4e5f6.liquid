<section id="featured-products-{{ section.id }}" class="bg-white px-6 py-20 lg:py-24">
  <div class="mx-auto max-w-container text-center">
    {%- if section.settings.section_title != blank -%}
      <h2 class="font-display text-4xl font-bold text-slate-900 lg:text-5xl">{{ section.settings.section_title }}</h2>
    {%- endif -%}
    {%- if section.settings.section_subtitle != blank -%}
      <p class="mt-4 max-w-2xl mx-auto text-lg text-slate-600">
        {{ section.settings.section_subtitle }}
      </p>
    {%- endif -%}
    
    {%- if section.blocks.size > 0 -%}
      <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {%- for block in section.blocks -%}
          <div class="card-float text-left overflow-hidden">
            {%- if block.settings.image != blank -%}
              <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.image.alt | default: block.settings.title }}" class="w-full h-64 object-cover">
            {%- else -%}
              <img src="https://placehold.co/400x400/E0E7FF/333333?text={{ block.settings.title | url_encode }}" alt="{{ block.settings.title }}" class="w-full h-64 object-cover">
            {%- endif -%}
            <div class="p-6">
              {%- if block.settings.title != blank -%}
                <h3 class="font-display text-2xl font-bold text-slate-900">{{ block.settings.title }}</h3>
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                <p class="mt-2 text-slate-600">{{ block.settings.description }}</p>
              {%- endif -%}
              {%- if block.settings.button_text != blank and block.settings.button_link != blank -%}
                <a href="{{ block.settings.button_link }}" class="btn-pill btn-primary mt-6 inline-block px-6 py-3 text-sm font-semibold text-white">{{ block.settings.button_text }}</a>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "C: Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Find Your Perfect Fit"
    },
    {
      "type": "richtext",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "<p>From premium audio to all-day comfort, there's an Oladance for everyone.</p>"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "OWS Pro"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Premium open-ear sound with high-quality bass and focus mode.</p>"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "View Product"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "/products"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "blocks": [
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" }
      ]
    }
  ]
}
{% endschema %}

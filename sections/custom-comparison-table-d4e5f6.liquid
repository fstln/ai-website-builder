{%- liquid
  assign section_dom_id = "comparison-table-" | append: section.id
-%}

<section
  id="{{ section_dom_id }}"
  class="py-16 lg:py-24 color-scheme color-{{ section.settings.color_scheme | default: 'scheme-1' }} bg-background"
>
  <div class="mx-auto max-w-7xl px-6">
    {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
      <div class="text-center mb-16">
        {%- if section.settings.title != blank -%}
          <h2 class="text-4xl md:text-5xl font-bold tracking-tight text-foreground mb-4">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="text-lg md:text-xl text-muted max-w-2xl mx-auto">
            {{ section.settings.subtitle }}
          </p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="overflow-x-auto rounded-2xl border border-border shadow-lg">
      <table class="w-full min-w-[800px] text-left text-sm">
        {%- if section.settings.table_header != blank -%}
          <thead class="bg-surface-muted">
            {{ section.settings.table_header }}
          </thead>
        {%- endif -%}
        {%- if section.settings.table_body != blank -%}
          <tbody class="divide-y divide-border">
            {{ section.settings.table_body }}
          </tbody>
        {%- endif -%}
      </table>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "C: Comparison Table",
  "tag": "section",
  "class": "custom-comparison-table",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Find Your Perfect Fit"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Compare the Oladance OWS series."
    },
    {
      "type": "header",
      "content": "Table Content"
    },
    {
      "type": "html",
      "id": "table_header",
      "label": "Table Header (<thead>)",
      "info": "Define the table header row(s) here. Example: <tr><th>Feature</th><th>OWS 1</th><th>OWS 2</th><th class='bg-blue-600 text-white'>OWS Pro</th></tr>",
      "default": "<tr><th scope='col' class='p-6 font-semibold text-foreground'>Feature</th><th scope='col' class='p-6 font-semibold text-foreground text-center'>OWS 1</th><th scope='col' class='p-6 font-semibold text-foreground text-center'>OWS 2</th><th scope='col' class='p-6 font-semibold text-primary-foreground text-center bg-primary rounded-t-lg'>OWS Pro</th></tr>"
    },
    {

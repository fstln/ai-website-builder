{%- liquid
  assign section_id = 'hero-ksp-' | append: section.id
  assign bg_color = section.settings.background_color
-%}

<section
  id="{{ section_id }}"
  class="color-scheme color-{{ section.settings.color_scheme }} bg-background overflow-hidden"
  style="--bg-color: {{ bg_color }};"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div class="text-center md:text-left">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold font-heading tracking-tight text-foreground">
          {{ section.settings.heading }}
        </h1>
        <p class="mt-6 text-lg leading-8 text-muted">
          {{ section.settings.subheading }}
        </p>
        <div class="mt-10 flex items-center justify-center md:justify-start gap-x-6">
          <a href="{{ section.settings.cta_url }}" class="btn btn-primary">
            {{ section.settings.cta_text }}
          </a>
        </div>
      </div>
      <div>
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 1200 }}"
            alt="{{ section.settings.image.alt | escape }}"
            width="600"
            height="600"
            class="rounded-lg shadow-xl object-cover aspect-square"
            loading="eager"
          >
        {%- else -%}
          <img
            src="https://placehold.co/600x600/E2E8F0/4A5568?text=Oladance+OWS+Pro"
            alt="Placeholder image for Oladance OWS Pro headphones"
            width="600"
            height="600"
            class="rounded-lg shadow-xl object-cover aspect-square"
            loading="eager"
          >
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Hero KSP",
  "tag": "section",
  "class": "custom-hero-ksp-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stable enough, Comfortable enough"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Our patented open ear design and integrated liquid silicone molding mean the OWS Pro rests gently on top of your ear, never intruding. Comfort all day, every day.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Button URL",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero KSP"
    }
  ]
}
{% endschema %}

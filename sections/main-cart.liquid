{% comment %}
  Main Cart Section
  Theme 2.0 - Sections Everywhere
  Updated with modern DTC visual design
{% endcomment %}

<cart-items-component 
  class="cart-items-wrapper" 
  data-section-id="{{ section.id }}"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    {% if cart.item_count > 0 %}
      {%- comment -%} Cart Header {%- endcomment -%}
      <div class="mb-8">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">{{ 'general.cart.title' | t }}</h1>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {%- comment -%} Cart Items - Left Column {%- endcomment -%}
        <div class="lg:col-span-2">
          {%- comment -%} Error container {%- endcomment -%}
          <div data-cart-error class="hidden bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-4 text-sm"></div>
          
              {%- comment -%} Cart Items List {%- endcomment -%}
              <div class="cart-items divide-y divide-gray-200">
                {% for item in cart.items %}
                  {%- assign line_index = forloop.index0 -%}
                  <div
                    class="cart-item flex gap-4 py-6 first:pt-0"
                    data-cart-item="{{ item.key }}"
                    data-item-key="{{ item.key }}"
                    ref="cartItemRows[]"
                  >
                {%- comment -%} Product Image {%- endcomment -%}
                {% if item.image %}
                  <a href="{{ item.url }}" class="flex-shrink-0 group">
                    <img 
                      src="{{ item.image | image_url: width: 160 }}" 
                      alt="{{ item.title }}" 
                      class="w-24 h-24 md:w-32 md:h-32 object-cover rounded-lg group-hover:opacity-90 transition-opacity"
                      loading="lazy"
                    >
                  </a>
                {% endif %}
                
                {%- comment -%} Product Info {%- endcomment -%}
                <div class="flex-grow min-w-0">
                  <h3 class="font-semibold text-lg sm:text-xl mb-2 text-gray-900">
                    <a href="{{ item.url }}" class="hover:text-blue-600 transition-colors">
                      {{ item.product.title }}
                    </a>
                  </h3>
                  
                  {%- comment -%} Variant Title {%- endcomment -%}
                  {% unless item.variant.title contains 'Default' %}
                    <p class="text-sm text-gray-600 mb-3">
                      {{ item.variant.title }}
                    </p>
                  {% endunless %}
                  
                  {%- comment -%} Line Item Properties {%- endcomment -%}
                  {% if item.properties.size > 0 %}
                    <div class="item-properties text-sm text-gray-600 mb-3 space-y-1">
                      {% for property in item.properties %}
                        {% unless property.first contains '_' %}
                          <div>
                            <span class="font-medium text-gray-700">{{ property.first }}:</span>
                            {{ property.last }}
                          </div>
                        {% endunless %}
                      {% endfor %}
                    </div>
                  {% endif %}
                  
                  {%- comment -%} Price and Quantity {%- endcomment -%}
                  <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4 mt-4">
                    {%- comment -%} Quantity Selector {%- endcomment -%}
                    <div class="quantity-wrapper flex items-center border border-gray-300 rounded-lg hover:border-gray-400 transition-colors" ref="quantitySelectors[]">
                      {% render 'quantity-input',
                        id: 'Quantity-' | append: item.key,
                        name: 'updates[' | append: item.key | append: ']',
                        value: item.quantity,
                        min: 0,
                        max: item.variant.inventory_quantity,
                        label: item.product.title,
                        line_index: line_index,
                        variant_id: item.variant.id,
                        class: 'w-auto'
                      %}
                    </div>
                    
                    {%- comment -%} Price Display {%- endcomment -%}
                    <div class="item-price-wrapper text-right space-y-1">
                      {%- comment -%} Unit Price (price per item) {%- endcomment -%}
                      <div class="text-sm text-gray-600">
                        {% if item.original_price > item.final_price %}
                          <span class="line-through">{{ item.original_price | money }}</span>
                          <span class="text-red-600 font-medium ml-1">{{ item.final_price | money }}</span>
                        {% else %}
                          {{ item.final_price | money }}
                        {% endif %}
                        <span class="text-gray-500 mx-1">Ã—</span>
                        <span>{{ item.quantity }}</span>
                      </div>
                      
                      {%- comment -%} Line Total Price {%- endcomment -%}
                      {% if item.original_line_price > item.final_line_price %}
                        <div class="flex items-center gap-2 justify-end">
                          <span class="text-red-600 font-bold text-xl" data-item-price>
                            {{ item.final_line_price | money }}
                          </span>
                          <span class="text-sm text-gray-400 line-through">
                            {{ item.original_line_price | money }}
                          </span>
                        </div>
                      {% else %}
                        <div class="font-bold text-xl text-gray-900" data-item-price>
                          {{ item.final_line_price | money }}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                  
                  {%- comment -%} Discounts {%- endcomment -%}
                  {% if item.line_level_discount_allocations.size > 0 %}
                    <div class="item-discounts mt-3 space-y-1">
                      {% for discount in item.line_level_discount_allocations %}
                        <div class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-green-50 text-green-700 text-xs font-medium">
                          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                            <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                          </svg>
                          {{ discount.discount_application.title }} (-{{ discount.amount | money }})
                        </div>
                      {% endfor %}
                    </div>
                  {% endif %}
                </div>
                
                {%- comment -%} Remove Button {%- endcomment -%}
                <button 
                  type="button" 
                  class="flex-shrink-0 w-8 h-8 flex items-center justify-center text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all"
                  data-cart-remove="{{ item.key }}"
                  data-item-name="{{ item.product.title }}"
                  aria-label="{{ 'general.cart.remove' | t }}: {{ item.product.title }}"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>
            {% endfor %}
          </div>
        </div>
        
        {%- comment -%} Cart Summary - Right Column {%- endcomment -%}
        <div class="lg:col-span-1">
          <div class="cart-summary bg-white border border-gray-200 p-6 sm:p-8 rounded-xl shadow-sm sticky top-4">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">{{ 'general.cart.subtotal' | t }}</h2>
            
            {%- comment -%} Subtotal {%- endcomment -%}
            <div class="flex justify-between items-baseline pb-6 mb-6 border-b border-gray-200">
              <span class="text-lg font-medium text-gray-700">{{ 'general.cart.subtotal' | t }}</span>
              <span class="text-3xl font-bold text-gray-900" data-cart-subtotal>{{ cart.total_price | money }}</span>
            </div>
            
            {%- comment -%} Cart Discounts {%- endcomment -%}
            {% if cart.cart_level_discount_applications.size > 0 %}
              <div class="cart-discounts mb-6 pb-6 border-b border-gray-200 space-y-2">
                {% for discount in cart.cart_level_discount_applications %}
                  <div class="flex justify-between items-center text-sm">
                    <span class="text-green-700 font-medium">{{ discount.title }}</span>
                    <span class="text-green-600 font-semibold">-{{ discount.total_allocated_amount | money }}</span>
                  </div>
                {% endfor %}
              </div>
            {% endif %}
            
            {%- comment -%} Shipping Note {%- endcomment -%}
            <p class="text-sm text-gray-600 mb-6 text-center">
              {{ 'general.cart.taxes_and_shipping_at_checkout' | t }}
            </p>
            
            {%- comment -%} Checkout Button {%- endcomment -%}
            <a 
              href="/checkout" 
              class="w-full text-center block px-6 py-4 bg-blue-600 text-white text-base font-semibold rounded-lg shadow hover:bg-blue-700 hover:shadow-lg transform hover:scale-105 transition-all duration-200 mb-3"
            >
              {{ 'general.cart.checkout' | t }}
            </a>
            
            {%- comment -%} Continue Shopping {%- endcomment -%}
            <a 
              href="{{ routes.all_products_collection_url }}" 
              class="w-full text-center block px-6 py-3 bg-gray-100 text-gray-900 text-sm font-medium rounded-lg border border-gray-200 hover:bg-gray-200 transition-all duration-200"
            >
              {{ 'general.continue_shopping' | t }}
            </a>
          </div>
        </div>
      </div>
    {% else %}
      {%- comment -%} Empty Cart State {%- endcomment -%}
      <div class="empty-cart text-center py-16 sm:py-24">
        <div class="max-w-md mx-auto">
          <div class="w-32 h-32 mx-auto mb-8 rounded-full bg-gray-100 flex items-center justify-center">
            <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{{ 'general.cart.empty' | t }}</h2>
          <a 
            href="{{ routes.all_products_collection_url }}" 
            class="inline-block px-8 py-4 bg-blue-600 text-white text-base font-semibold rounded-lg shadow hover:bg-blue-700 hover:shadow-lg transform hover:scale-105 transition-all duration-200"
          >
            {{ 'general.continue_shopping' | t }}
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</cart-items-component>

{% schema %}
{
  "name": "Main Cart",
  "tag": "section",
  "class": "section-main-cart",
  "settings": []
}
{% endschema %}


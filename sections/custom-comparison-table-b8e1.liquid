{%- comment -%}
  Section: Comparison Table
  Renders a responsive table comparing different product models.
{%- endcomment -%}

{%- liquid
  assign section_id_fallback = 'comparison-table-' | append: section.id
  assign section_dom_id = section.settings.section_id | default: section_id_fallback | escape
-%}

<section
  id="{{ section_dom_id }}"
  class="py-16 lg:py-24 bg-gray-50"
  data-section-id="{{ section.id }}"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 lg:mb-16">
      {%- if section.settings.heading != blank -%}
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 font-['Outfit']">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}
      {%- if section.settings.subheading != blank -%}
        <div class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
          {{ section.settings.subheading }}
        </div>
      {%- endif -%}
    </div>

    <div class="overflow-x-auto">
      {%- if section.settings.table_html != blank -%}
        {{ section.settings.table_html }}
      {%- else -%}
        <div class="w-full min-w-max border-collapse text-left">
          <p class="text-center text-gray-500">
            Please add table HTML in the section settings.
          </p>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "C: Comparison Table",
  "tag": "section",
  "class": "custom-comparison-table",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "info": "Used for anchor links from navigation."
    },
    {
      "type": "header",
      "content": "t:sections.all.headers.content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find Your Perfect Fit"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Compare the Oladance Wearable Stereo series to find the one that's right for you.</p>"
    },
    {
      "type": "html",
      "id": "table_html",
      "label": "Table HTML",
      "info": "Paste the full <table>...</table> structure here. Use utility classes for styling.",
      "default": "<table class=\"w-full min-w-max border-collapse text-left\"><thead><tr><th class=\"p-4 lg:p-6 text-sm font-semibold text-gray-600 bg-white rounded-tl-2xl\">Feature</th><th class=\"p-4 lg:p-6 text-sm font-semibold text-gray-600 bg-white text-center\">OWS 1</th><th class=\"p-4 lg:p-6 text-sm font-semibold text-gray-900 bg-[#E9EFFF] text-center border-2 border-[#A8B8FF] rounded-t-2xl relative\"><span class=\"absolute -top-4 left-1/2 -translate-x-1/2 bg-[#A8B8FF] text-white text-xs font-bold px-3 py-1 rounded-full\">MOST POPULAR</span>OWS 2</th><th class=\"p-4 lg:p-6 text-sm font-semibold text-gray-600 bg-white text-center rounded-tr-2xl\">OWS Pro</th></tr></thead><tbody class=\"divide-y divide-gray-200\"><tr class=\"bg-white\"><td class=\"p-4 lg:p-6 font-medium text-gray-800\">Battery Life (Single Charge)</td><td class=\"p-4 lg:p-6 text-gray-600 text-center\">Up to 16 hours</td><td class=\"p-4 lg:p-6 text-gray-900 font-bold text-center bg-[#F5F8FF] border-x-2 border-[#A8B8FF]\">Up to 19 hours</td><td class=\"p-4 lg:p-6 text-gray-600 text-center\">Up to 16 hours</td></tr><tr class=\"bg-white\"><td class=\"p-4 lg:p-6 font-medium text-gray-800\">Bluetooth Version</td><td class=\"p-4 lg:p-6 text-gray-600 text-center\">5.2</td><td class=\"p-4 lg:p-6 text-gray-900 font-bold text-center bg-[#F5F8FF] border-x-2 border-[#A8B8FF]\">5.3</td><td class=\"p-4 lg:p-6 text-gray-600 text-center\">5.3</td></tr><tr class=\"bg-white\"><td class=\"p-4 lg:p-6 font-medium text-gray-800\">Multipoint Connection</td><td class=\"p-4 lg:p-6 text-gray-600 text-center text-2xl text-red-400\">&times;</td><td class=\"p-4 lg:p-6 text-gray-900 font-bold text-center bg-[#F5F8FF] border-x-2 border-[#A8B8FF] text-2xl text-green-500\">&check;</td><td class=\"p-4 lg:p-6 text-gray-600 text-center text-2xl text-green-500\">&check;</td></tr><tr class=\"bg-white\"><td class=\"p-4 lg:p-6 font-medium text-gray-800\">Bass Effect</td><td class=\"p-4 lg:p-6 text-gray-600 text-center\">Virtual Bass<
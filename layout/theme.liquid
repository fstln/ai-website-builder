<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  
  <title>
    {{ page_title }}
    {%- if current_tags %} &ndash; {{ 'general.meta.tags' | t }}: {{ current_tags | join: ', ' }}{% endif -%}
    {%- if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif -%}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>
  
  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}
  
  <link rel="canonical" href="{{ canonical_url }}">
  
  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
  {%- endif -%}
  
  {{ content_for_header }}
  
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  
  <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>
  
  {% comment %} Dynamic Design Token Injection {% endcomment %}
  <style>
    :root {
      /* Color Tokens */
      --color-primary: {{ settings.color_primary | default: '#000000' }};
      --color-secondary: {{ settings.color_secondary | default: '#666666' }};
      --color-accent: {{ settings.color_accent | default: '#3B82F6' }};
      --color-background: {{ settings.color_background | default: '#FFFFFF' }};
      --color-text: {{ settings.color_text | default: '#111827' }};
      --color-text-secondary: {{ settings.color_text_secondary | default: '#6B7280' }};
      --color-border: {{ settings.color_border | default: '#E5E7EB' }};
      --color-error: {{ settings.color_error | default: '#EF4444' }};
      --color-success: {{ settings.color_success | default: '#10B981' }};
      --color-warning: {{ settings.color_warning | default: '#F59E0B' }};
      
      /* Typography Tokens */
      {% if settings.font_heading %}
        --font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
      {% endif %}
      {% if settings.font_body %}
        --font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
      {% endif %}
      --text-size-xs: {{ settings.text_size_xs | default: 12 }}px;
      --text-size-sm: {{ settings.text_size_sm | default: 14 }}px;
      --text-size-base: {{ settings.text_size_base | default: 16 }}px;
      --text-size-lg: {{ settings.text_size_lg | default: 18 }}px;
      --text-size-xl: {{ settings.text_size_xl | default: 20 }}px;
      --font-weight-normal: {{ settings.font_weight_normal | default: '400' }};
      --font-weight-bold: {{ settings.font_weight_bold | default: '700' }};
      --line-height-tight: {{ settings.line_height_tight | default: '1.25' }};
      --line-height-normal: {{ settings.line_height_normal | default: '1.5' }};
      --line-height-relaxed: {{ settings.line_height_relaxed | default: '1.75' }};
      
      /* Spacing Tokens */
      --spacing-base: {{ settings.spacing_base | default: 4 }}px;
      --spacing-0: 0;
      --spacing-1: calc(var(--spacing-base) * 0.5);
      --spacing-2: calc(var(--spacing-base) * 1);
      --spacing-3: calc(var(--spacing-base) * 1.5);
      --spacing-4: calc(var(--spacing-base) * 2);
      --spacing-6: calc(var(--spacing-base) * 3);
      --spacing-8: calc(var(--spacing-base) * 4);
      --spacing-12: calc(var(--spacing-base) * 6);
      --spacing-16: calc(var(--spacing-base) * 8);
      
      /* Border Tokens */
      --radius-none: {{ settings.border_radius_none | default: '0' }}px;
      --radius-sm: {{ settings.border_radius_sm | default: 4 }}px;
      --radius-md: {{ settings.border_radius_md | default: 6 }}px;
      --radius-lg: {{ settings.border_radius_lg | default: 8 }}px;
      --radius-xl: {{ settings.border_radius_xl | default: 12 }}px;
      --radius-full: {{ settings.border_radius_full | default: 9999 }}px;
      --border-width: {{ settings.border_width | default: 1 }}px;
      
      /* Shadow Tokens */
      --shadow-none: {{ settings.shadow_none | default: 'none' }};
      --shadow-sm: {{ settings.shadow_sm | default: '0 1px 2px 0 rgba(0, 0, 0, 0.05)' }};
      --shadow-md: {{ settings.shadow_md | default: '0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)' }};
      --shadow-lg: {{ settings.shadow_lg | default: '0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)' }};
      --shadow-xl: {{ settings.shadow_xl | default: '0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)' }};
      --shadow-2xl: {{ settings.shadow_2xl | default: '0 25px 50px -12px rgba(0, 0, 0, 0.25)' }};
      
      /* Brand Personality Tokens */
      {% assign brand_density = settings.brand_density | default: 'normal' %}
      {% assign brand_scale = settings.brand_scale | default: 'medium' %}
      {% assign brand_boldness = settings.brand_boldness | default: 50 %}
      
      {% comment %} Calculate density multiplier {% endcomment %}
      {% if brand_density == 'compact' %}
        {% assign density_multiplier = 0.75 %}
      {% elsif brand_density == 'spacious' %}
        {% assign density_multiplier = 1.25 %}
      {% else %}
        {% assign density_multiplier = 1.0 %}
      {% endif %}
      
      {% comment %} Calculate scale multiplier {% endcomment %}
      {% if brand_scale == 'small' %}
        {% assign scale_multiplier = 0.85 %}
      {% elsif brand_scale == 'large' %}
        {% assign scale_multiplier = 1.15 %}
      {% else %}
        {% assign scale_multiplier = 1.0 %}
      {% endif %}
      
      --brand-density: {{ brand_density }};
      --brand-scale: {{ brand_scale }};
      --brand-boldness: {{ brand_boldness }};
      --density-multiplier: {{ density_multiplier }};
      --scale-multiplier: {{ scale_multiplier }};
      
      /* Component Size Tokens */
      {% assign button_padding_x_base = settings.button_padding_x | default: 24 %}
      {% assign button_padding_y_base = settings.button_padding_y | default: 12 %}
      {% assign button_min_height_base = settings.button_min_height | default: 44 %}
      {% assign button_font_size_base = settings.button_font_size | default: 16 %}
      
      --button-padding-x: calc({{ button_padding_x_base }}px * var(--scale-multiplier));
      --button-padding-y: calc({{ button_padding_y_base }}px * var(--scale-multiplier));
      --button-min-height: calc({{ button_min_height_base }}px * var(--scale-multiplier));
      --button-font-size: {{ button_font_size_base }}px;
      
      {% assign card_padding_base = settings.card_padding | default: 24 %}
      {% assign card_gap_base = settings.card_gap | default: 16 %}
      
      --card-padding: calc({{ card_padding_base }}px * var(--density-multiplier));
      --card-gap: calc({{ card_gap_base }}px * var(--density-multiplier));
      
      {% assign input_padding_x_base = settings.input_padding_x | default: 16 %}
      {% assign input_padding_y_base = settings.input_padding_y | default: 12 %}
      {% assign input_min_height_base = settings.input_min_height | default: 44 %}
      
      --input-padding-x: calc({{ input_padding_x_base }}px * var(--scale-multiplier));
      --input-padding-y: calc({{ input_padding_y_base }}px * var(--scale-multiplier));
      --input-min-height: calc({{ input_min_height_base }}px * var(--scale-multiplier));
      
      {% assign nav_item_padding_base = settings.nav_item_padding | default: 12 %}
      {% assign nav_item_spacing_base = settings.nav_item_spacing | default: 16 %}
      
      --nav-item-padding: calc({{ nav_item_padding_base }}px * var(--density-multiplier));
      --nav-item-spacing: calc({{ nav_item_spacing_base }}px * var(--density-multiplier));
      
      /* Interaction Tokens */
      --transition-duration: {{ settings.transition_duration | default: 200 }}ms;
      --hover-opacity: {{ settings.hover_opacity | default: 0.9 }};
      --hover-scale: {{ settings.hover_scale | default: 1.0 }};
      --active-opacity: {{ settings.active_opacity | default: 0.8 }};
      
      /* Layout Tokens */
      {% assign section_spacing_base = settings.section_spacing | default: 64 %}
      {% assign content_padding_base = settings.content_padding | default: 24 %}
      {% assign grid_gap_base = settings.grid_gap | default: 24 %}
      {% assign container_max_width_base = settings.container_max_width | default: 1280 %}
      
      --section-spacing: calc({{ section_spacing_base }}px * var(--density-multiplier));
      --content-padding: calc({{ content_padding_base }}px * var(--density-multiplier));
      --grid-gap: calc({{ grid_gap_base }}px * var(--density-multiplier));
      --container-max-width: {{ container_max_width_base }}px;
    }
  </style>
</head>

<body class="template-{{ template.name }}">
  {% section 'header' %}
  
  <main id="MainContent" class="content-for-layout" role="main">
    {{ content_for_layout }}
  </main>
  
  {% section 'footer' %}
</body>
</html>


{% comment %}
  Blog List Template
{% endcomment %}

<div class="container-custom py-8">
  {% render 'breadcrumbs' %}
  
  <div class="blog-header mt-8 mb-12 text-center">
    <h1 class="text-4xl font-bold mb-4">{{ blog.title }}</h1>
  </div>
  
  {% paginate blog.articles by 9 %}
    <div class="blog-articles">
      {% if blog.articles.size > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {% for article in blog.articles %}
            <article class="article-card border rounded-lg overflow-hidden">
              {% if article.image %}
                <a href="{{ article.url }}">
                  <img src="{{ article.image | image_url: width: 600 }}" alt="{{ article.title }}" class="w-full h-48 object-cover">
                </a>
              {% endif %}
              
              <div class="p-6">
                <h2 class="text-xl font-bold mb-2">
                  <a href="{{ article.url }}" class="hover:underline">{{ article.title }}</a>
                </h2>
                
                <p class="text-sm text-gray-600 mb-4">
                  {{ article.published_at | date: format: 'month_day_year' }}
                </p>
                
                {% if article.excerpt != blank %}
                  <p class="text-gray-700 mb-4">{{ article.excerpt | strip_html | truncate: 150 }}</p>
                {% endif %}
                
                <a href="{{ article.url }}" class="text-primary font-medium hover:underline">
                  {{ 'blogs.article.read_more' | t | default: 'Read More' }} â†’
                </a>
              </div>
            </article>
          {% endfor %}
        </div>
        
        {% if paginate.pages > 1 %}
          <div class="pagination mt-12 flex justify-center gap-2">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="btn btn-secondary">{{ 'general.pagination.previous' | t | default: 'Previous' }}</a>
            {% endif %}
            
            <span class="px-4 py-2">{{ paginate.current_page }} / {{ paginate.pages }}</span>
            
            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="btn btn-secondary">{{ 'general.pagination.next' | t | default: 'Next' }}</a>
            {% endif %}
          </div>
        {% endif %}
      {% else %}
        <p class="text-center text-gray-600">{{ 'blogs.general.no_articles' | t | default: 'No articles found' }}</p>
      {% endif %}
    </div>
  {% endpaginate %}
</div>

